
<!--About content-->
<h1 class="display-3 p-3 text-center"><%= title %> Me</h1>

<div class="container bg-light rounded">
  <div class=" p-lg-5 p-md-2 p-sm-0 d-flex justify-content-center flex-wrap m-lg-3 m-md-2">
    
