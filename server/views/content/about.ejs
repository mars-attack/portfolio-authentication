        <li class="p-1 col-lg-3 col-md-4 col-sm-6"><i class="fab fa-html5"></i> HTML</li>
        <li class="p-1 col-lg-3 col-md-4 col-sm-6"><i class="fab fa-css3-alt"></i> CSS</li>
        <li class="p-1 col-lg-3 col-md-4 col-sm-6"><i class="fab fa-js-square"></i> JavaScript</li>
        <li class="p-1 col-lg-3 col-md-4 col-sm-6"><i class="fab fa-node-js"></i> NodeJS</li>
        <li class="p-1 col-lg-3 col-md-4 col-sm-6"><i class="fab fa-angular"></i> Angular</li>
        <li class="p-1 col-lg-3 col-md-4 col-sm-6"><i class="fab fa-react"></i> React</li>
        <li class="p-1 col-lg-3 col-md-4 col-sm-6"><i class="fas fa-code"></i> C#</li>
        <li class="p-1 col-lg-3 col-md-4 col-sm-6"><i class="fab fa-java"></i> Java</li>
