      <!--Buttons for downloading and viewing resume-->
      <hr class="my-4">
      <a href="/Assets/Marianne_Palmer_Resume.pdf" target="_blank" download>
        <button type="button" id="downloadResumeBTN" class="btn btn-success">
          <i class="fas fa-cloud-download-alt"></i> 
          Download Resume
        </button>
      </a>
      <button type="button" id="viewResumeBTN" class="btn btn-info">
        <i class="fas fa-binoculars"></i> 
        View Resume
